{% extends "base/base.html.twig" %}

{% block title %}{{ parent() }}Search{% endblock %}
{% block body %}
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div id="logo-image" class="col-md-12 w-100 h-25"></div>
            </div>
        </div>
    </div>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4"><a class="btn btn-outline-primary" href="javascript:history.go(-1)">&lt;&lt; Back to results</a></div><br><br><br><br><br>
                <div class="col-md-8">
                    <h1 class="text-center">{{ restaurant.name }}</h1><br><br>
                    <div class="row">
                        <div class="col-md-4"><img class="img-fluid d-block rounded-circle mx-auto w-75" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"></div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="">{{ miles_away }} miles away</h4>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="">delivery in {{ restaurant.deliverytime }} minutes</h4>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="">£{{ restaurant.minimalorder }} minimal order</h4>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="">£{{ restaurant.deliverycost }} delivery cost</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <br><br>
                            <h3 class="text-center">Contact details</h3>
                            <ul class="">
                                <li>website: <a href="{{ restaurant.website }}" target="_blank">{{ restaurant.website }}</a></li>
                                <li>phone: <a href="tel:{{ restaurant.mobile }}">{{ restaurant.mobile }}</a></li>
                                <li>email: <a href="{{ restaurant.email }}">{{ restaurant.email }}</a></li>
                            </ul>
{#                            todo add add to fav functionality#}
                            {%  if app.user %}
                                <form method="post" action="{{ path('app_panel_add_favorite') }}">
                                    <input type="hidden" name="opened_tab" value="favs" />
                                    <input type="hidden" name="restaurantID" value="{{ restaurant.id }}" />
                                    <button class="btn btn-primary btn-lg" type="submit" style="margin-left: 20%">Add to favourites</button>
                                </form>
{#                            <a class="btn btn-primary btn-lg" href="{{ path('app_panel_add_favorite', {opened_tab: 'favs', restaurant_id: restaurant.id}) }}" role="button" style="margin-left: 20%">Add to favourites</a>#}
                            {%  else %}
                            <p class="alert alert-info">You have to log in first, to add this restaurant to favorites.</p>
                            <a class="btn btn-primary btn-lg" href="{{ path('app_login')}}" role="button" style="margin-left: 20%">Log in</a>
                            {% endif %}
                        </div>

                        <div class="col-md-4"><iframe width="220" height="220" src="https://maps.google.com/maps?q={{ restaurant.lat }},{{ restaurant.lng }}&amp;z=14&amp;output=embed"></iframe></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <hr>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-8" style="overflow-y: scroll; max-height: 1000px">
                    <div class="table-responsive">
                        <table class="table table-striped table-borderless">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Meal name</th>
                                <th scope="col">Ingredients</th>
                                <th scope="col">Price</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th scope="row"> '.$i.' </th>
                                <td>'.$row["name"].'</td>
                                <td>'.$row["ingredients"].'</td>
                                <td>£'.$row["price"].'</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
