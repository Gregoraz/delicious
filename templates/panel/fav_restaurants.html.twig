<div class="tab-pane fade {% if opened_tab == 'fav' %}show active{% endif %}" id="v-pills-fav" role="tabpanel" aria-labelledby="v-pills-fav-tab">
    <h2>Saved restaurants</h2>
    <hr>
    <br><br>
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Restaurant name</th>
                <th scope="col">Restaurant website</th>
                <th scope="col">Restaurant phone</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for restaurant in app.user.favRestaurants %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td class="text-left">{{ restaurant.name }}</td>
                    <td class="text-left"><a href="{{ restaurant.website }}">{{ restaurant.website }}</a></td>
                    <td class="text-left">{{ restaurant.mobile }}</td>
                    <td>
                        <form class="form-inline panel-action" method="post" action="{{ path('app_panel_delete_favorite') }}">
                            <input type="hidden" name="restaurantID" value="{{ restaurant.id }}" />
                            <button type="submit" class="btn btn-outline-primary btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>