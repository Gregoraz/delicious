<div class="tab-pane fade" id="v-pills-fav" role="tabpanel" aria-labelledby="v-pills-fav-tab">
    <h2>Saved restaurants</h2>
    <hr>
    <br><br>
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Restaurant name</th>
                <th scope="col">Restaurant website</th>
                <th scope="col">Restaurant phone</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for restaurant in app.user.favRestaurants %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ restaurant.name }}</td>
                    <td><a href="{{ restaurant.website }}">{{ restaurant.website }}</a></td>
                    <td>{{ restaurant.mobile }}</td>
                    <td><a href="{{ path('app_panel_delete_favorite', {restaurantID: restaurant.id}) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>