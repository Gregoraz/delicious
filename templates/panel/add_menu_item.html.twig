{% extends "base/base.html.twig" %}

{% block title %}{{ parent() }}Panel - Add Menu Item{% endblock %}
{% block body %}
<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Add menu item</h2>
                <p><a href="{{ path('app_panel_index') }}">go back</a></p><hr><br><br>

                <form id="editrestaurant" name="addmenuitem" action="{{ path('app_panel_add_menuitem_process') }}" method="post" style="width: 50%; margin-left: 25%; margin-right:25%;">

                    <div class="form-group"> <label>Meal name</label> <input type="text" class="form-control" value="" name="mealName" id="mealName" minlength="3" maxlength="20" required>  </div>
                    <div class="form-group"> <label>Ingredients</label> <textarea class="form-control" value="" name="ingredients" id="ingredients" minlength="5" maxlength="500" required></textarea>  </div>
                    <div class="form-group"> <label>Price</label> <input type="number" class="form-control" value="" name="price" id="price" min="1" max="200" required>  </div>

                    <button type="submit" class="btn btn-primary">Add</button>
                </form>


            </div>
        </div>
    </div>
</div>
{% endblock %}
